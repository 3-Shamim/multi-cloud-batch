<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define log directory -->
    <property name="LOGS" value="./logs"/>

    <!-- Console Appender with a color pattern -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%green(%thread)] %cyan(%logger{36}): %msg%n%throwable
            </pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender: rotates daily or when a file exceeds 10MB -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/multi-cloud-batch.log</file>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n%throwable</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Log filename pattern with daily rotation and index -->
            <fileNamePattern>${LOGS}/archived/multi-cloud-batch-%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <!-- Roll over a log file when it exceeds this size -->
            <maxFileSize>10MB</maxFileSize>

            <!-- Keep logs for 30 days -->
            <maxHistory>30</maxHistory>

            <!-- Limit the total size of all archived logs -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="Console"/>
        <appender-ref ref="RollingFile"/>
    </root>

    <!-- Application-specific Logger (optional) -->
    <logger name="com.multicloud" level="INFO" additivity="false">
        <appender-ref ref="Console"/>
        <appender-ref ref="RollingFile"/>
    </logger>

</configuration>
